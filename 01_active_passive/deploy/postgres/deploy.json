{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PostgresSettings": {
            "type": "object",
            "metadata": {
                "description": "Settings object. Expects properties: name, location, properties"
            }
        }
    },
    "variables": {
        "name": "[parameters('PostgresSettings').name]",
        "location": "[parameters('PostgresSettings').location]",
        "properties": "[parameters('PostgresSettings').properties]"
    },
    "resources": [
        {
            "type": "Microsoft.DBforPostgreSQL/servers",
            "apiVersion": "2017-12-01",
            "name": "[variables('name')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "GP_Gen5_4",
                "tier": "GeneralPurpose",
                "capacity": 4,
                "size": "102400",
                "family": "Gen5"
            },
            "properties": "[variables('properties')]"
        }
    ],
    "outputs": {
        "fqdn": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/servers/',variables('name'))).fullyQualifiedDomainName]"
        }
    }
  }