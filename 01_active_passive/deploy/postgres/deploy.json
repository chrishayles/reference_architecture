{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PostgresSettings": {
            "type": "object",
            "metadata": {
                "description": "Settings object. Expects properties: eastName, westName, storageMB, username, password, rgEast, rgWest"
            }
        }
    },
    "variables": {
        "eastName": "[parameters('PostgresSettings').eastName]",
        "westName": "[parameters('PostgresSettings').westName]",
        "username": "[parameters('PostgresSettings').username]",
        "password": "[parameters('PostgresSettings').password]",
        "rgEast": "[parameters('PostgresSettings').rgEast]",
        "rgWest": "[parameters('PostgresSettings').rgWest]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "east",
            "resourceGroup": "[variables('rgEast')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.DBforPostgreSQL/servers",
                            "apiVersion": "2017-12-01",
                            "name": "[variables('eastName')]",
                            "location": "eastus",
                            "sku": {
                                "name": "GP_Gen5_4",
                                "tier": "GeneralPurpose",
                                "capacity": 4,
                                "size": "102400",
                                "family": "Gen5"
                            },
                            "properties": {
                                "version": "10.0",
                                "administratorLogin": "[variables('username')]",
                                "administratorLoginPassword": "[variables('password')]",
                                "storageProfile": {
                                    "storageMB": 102400,
                                    "backupRetentionDays": 7,
                                    "geoRedundantBackup": "Disabled",
                                    "storageAutoGrow": "Enabled"
                                },
                                "infrastructureEncryption": "Disabled"
                            }
                        }              
                    ],
                    "outputs": {
                        "east_id": {
                            "type": "string",
                            "value": "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('eastName'))]"
                        },
                        "psql_east": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/servers',variables('eastName')),'2017-12-01').fullyQualifiedDomainName]"
                        }
                    }
                }
            }
        }
    ]
  }